# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database
POSTGRES_URL=postgresql://username:password@hostname:port/database

# Redis (Upstash)
REDIS_URL=redis://username:password@hostname:port

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 Configuration
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key

# External API Keys
SANCTIONS_API_KEY=your-comply-advantage-api-key
COMPLY_ADVANTAGE_API_KEY=your-comply-advantage-api-key
NEWS_API_KEY=your-newsapi-key

# Email Service (Postmark)
POSTMARK_TOKEN=your-postmark-server-token
POSTMARK_SERVER_TOKEN=your-postmark-server-token

# Monitoring & Analytics
SENTRY_DSN_FE=your-sentry-frontend-dsn
SENTRY_DSN_BE=your-sentry-backend-dsn
SENTRY_DSN=your-sentry-backend-dsn

# Frontend Environment Variables (Next.js)
NEXT_PUBLIC_API_BASE=http://localhost:5000/api
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain-for-analytics

# Rules Engine Service
RULES_ENGINE_BASE_URL=http://localhost:8000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RISK_CHECK_RATE_LIMIT_MAX=10
PDF_RATE_LIMIT_MAX=5

# External API Configuration
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_MAX_RETRIES=3

# PDF Generation Configuration
PDF_GENERATION_TIMEOUT=30000
PDF_MAX_CONCURRENT_JOBS=5

# Cache Configuration
CACHE_TTL_SECONDS=300
FEATURED_COUNTRIES_CACHE_TTL=600

# Security Configuration
CORS_ORIGIN=http://localhost:5000
HELMET_CSP_DIRECTIVES=default-src 'self'

# Job Queue Configuration
JOB_QUEUE_CONCURRENCY=3
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=1000

# Notification Configuration
EMAIL_FROM_ADDRESS=noreply@deel.com
NOTIFICATION_BATCH_SIZE=50

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
METRICS_AGGREGATION_INTERVAL=3600

# Development/Testing Configuration
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_LOGGING=false
DISABLE_RATE_LIMITING=false

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
ENABLE_DETAILED_HEALTH_CHECKS=true

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true

# Compliance Configuration
GDPR_DATA_RETENTION_DAYS=1095
PII_ENCRYPTION_KEY=your-pii-encryption-key

# Worker Configuration
WORKER_CONCURRENCY=2
WORKER_HEARTBEAT_INTERVAL=30000
WORKER_MAX_JOB_TIME=300000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=120000
